---
import { Dayjs } from 'dayjs';

interface Props {
  title: string
  fromDate?: Dayjs
  toDate?: Dayjs
  description?: string;
  className?: string;
}

const dateFormat = "DD MMM of YYYY"

const {
  title,
  fromDate,
  toDate,
  description,
  className = ""
} = Astro.props;

const rangeDateText = fromDate ? `${fromDate.format(dateFormat)} - ${toDate ? toDate.format(dateFormat) : "Today"}` : ""
---

<div class:list={["group flex flex-col gap-2 px-2 py-3 md:px-5 md:py-6.5 lg:px-8 lg:py-10 border-gradient-rusty bg-linear-to-r border-3 font-merriweather", className]}>
  <h3 class="font-bold text-xl md:text-3xl tracking-tight leading-7 md:leading-9">{title}</h3>
  {rangeDateText && <span class="font-medium text-base md:text-lg leading-6 md:leading-7">{rangeDateText}</span>}
  {description && <p class="font-medium text-sm md:text-base lg:text-lg">{description}</p>}
  <slot />
</div>