---
import MenuLink from "./MenuLink.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<MenuLink href={getRelativeLocaleUrl(currentLang,"/")}>{t('nav.about')}</MenuLink>
<MenuLink href={getRelativeLocaleUrl(currentLang,"/blog")}>{t('nav.blog')}</MenuLink>
<MenuLink href={getRelativeLocaleUrl(currentLang,"/create")}>{t('nav.want_a_site')}</MenuLink>
