---
import type { SvgComponent } from 'astro/types';

interface Props {
  title: string;
  skillList: { name: string, Icon: SvgComponent }[]
  className?: string;
}

const { title, skillList, className } = Astro.props;
---

<div class:list={["relative grid grid-cols-4 sm:grid-cols-3 md:grid-cols-5 gap-6 flex-wrap place-items-center py-8 md:py-16 px-7 md:px-14 border-3 border-rust-m border-dashed rounded-2xl", className]}>
  <h4 class="absolute top-0 translate-y-[calc(-50%-3px)] left-4 bg-white py-2 px-1 font-bold text-xl text-rust-m">{title}</h4>
  {skillList.map(({ name, Icon }) => (
    <Icon aria-label={name} class="hover:fill-rust-l w-16 h-16 sm:w-24 sm:h-24" />
  ))}
</div>