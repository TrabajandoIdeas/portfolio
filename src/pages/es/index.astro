---
import Layout from '@/layouts/Layout.astro';

import Navbar from '@/containers/Navbar.astro';

import SectionTitle from '@/components/SectionTitle.astro';
import SkillsDisplay from '@/components/SkillsDisplay.astro';


import data from "@/data";
import Hero from '@/containers/Hero.astro';
import ExperienceSection from '@/containers/ExperienceSection.astro';
import Projects from '@/containers/Projects.astro';
import SkillSection from '@/containers/SkillSection.astro';
---
  
<Layout>
  <script src="@/scripts/showMenu.ts" />
  <Navbar id="navbar" class="transition-all duration-500 -translate-y-[calc(100%+28px)]" />

  <Hero description="Transformando problemas en soluciones, despejando el camino para que tus ideas se conviertan en productos"  />
  
  <ExperienceSection
    title="Experiencia"
    experienceList={data.experience}
    lastItem={{
      title: "Maybe you",
      description: "I exited to start transforming your ideas into real products"
    }}
  />
  
  
  {data.projects.length > 0 && <Projects projectList={data.projects} />}
  
  <!-- Skills -->

  <SkillSection title="Habilidades" skillGroupList={data.skills} />

  <!-- Contact -->
</Layout>
